{
  "name": "@devmuse/debounce-service",
  "version": "1.0.0",
  "description": "Message debouncing service with duplicate prevention for WhatsApp automation",
  "tasks": {
    "dev": "deno run --allow-net --allow-env --watch debounce.ts",
    "start": "deno run --allow-net --allow-env debounce.ts",
    "test": "deno test --allow-net --allow-env"
  },
  "compilerOptions": {
    "lib": ["deno.window"],
    "strict": true
  },
  "fmt": {
    "files": {
      "include": ["debounce.ts"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": false,
      "proseWrap": "preserve"
    }
  },
  "lint": {
    "files": {
      "include": ["debounce.ts"]
    },
    "rules": {
      "tags": ["recommended"]
    }
  }
}
